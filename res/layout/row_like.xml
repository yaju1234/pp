<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ll_row"
    android:layout_height="60dp"
    android:background="@null"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >

    <LinearLayout
        android:id="@+id/ll_user_image_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <com.appsbee.pairpost.activity.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/test"
            app:border_color="#ffffff"
            app:border_width="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/ll_user_image_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="Beautilo"
            android:textColor="#20ee29"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>